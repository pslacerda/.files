
#
# Geral
#
    set $mod Mod4
    
    bindsym $mod+Shift+R restart
    bindsym $mod+Shift+E exit

#
# Lançadores
#
    bindsym $mod+Return        exec uxterm -e tmux attach
    bindsym $mod+Shift+Return  exec chromium
    bindsym $mod+d             exec dmenu_run

    set $vol 4%
     
    # teclas multimedia
    bindcode $mod+72 exec amixer --quiet set Master toggle
    bindcode $mod+73 exec amixer --quiet set Master $vol-
    bindcode $mod+74 exec amixer --quiet set Master $vol+
    
    # keypad *, -, +
    bindcode $mod+63 exec amixer --quiet set Master toggle
    bindcode $mod+82 exec amixer --quiet set Master $vol-
    bindcode $mod+86 exec amixer --quiet set Master $vol+

#
# Janelas flutuantes
#
    # Mouse+$mod arrasta janelas flutuantes
    floating_modifier $mod

    # alterna entre tiling e floating
    bindsym $mod+space floating toggle

    # muda o foco entre janelas flutuantes
    bindsym $mod+Shift+space focus mode_toggle

#
# Janelas empilhadas
#
    # miscelânea
    bindsym $mod+Shift+Q kill
    bindsym $mod+f       fullscreen
  
    # muda foco
    bindsym $mod+h focus left
    bindsym $mod+j focus down
    bindsym $mod+k focus up
    bindsym $mod+l focus right

    # movimenta janelas
    bindsym $mod+Shift+h move left
    bindsym $mod+Shift+j move down
    bindsym $mod+Shift+k move up
    bindsym $mod+Shift+l move right

    # redimensiona
    bindsym $mod+Control+h resize shrink width 
    bindsym $mod+Control+l resize grow width
    bindsym $mod+Control+k resize grow height
    bindsym $mod+Control+j resize shrink height

#
# Containers
#
    # particiona container
    #bindsym $mod+Minus  split horizontal
    #bindsym $mod+Equals split vertical

    # alterna layout
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout default
    bindsym $mod+x layout toggle all

    # foca container pai
    bindsym $mod+a focus parent

#
# Áreas de trabalho
#
    # alterna para área de trabalho
    bindsym $mod+1 workspace 1
    bindsym $mod+2 workspace 2
    bindsym $mod+3 workspace 3
    bindsym $mod+4 workspace 4

    # move container em foco para área de trabalho
    bindsym $mod+Shift+exclam     move container to workspace 1
    bindsym $mod+Shift+at         move container to workspace 2
    bindsym $mod+Shift+numbersign move container to workspace 3
    bindsym $mod+Shift+dollar     move container to workspace 4


# Start i3bar to display a workspace bar (plus the system information i4status
# finds out, if available)

bar {
        status_command      i3status -c ~/.i3status.conf
        position            top
}
