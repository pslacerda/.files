zstyle ':prezto:load' pmodule \
  'environment' \
  'terminal' \
  'editor' \
  'history' \
  'directory' \
  'spectrum' \
  'utility' \
  'completion' \
  'archive' \
  'git' \
  'syntax-highlighting' \
  'history-substring-search' \
  'prompt' 


#
# Bê-a-bá
# 
zstyle ':prezto:*:*' case-sensitive 'no'
zstyle ':prezto:*:*' color 'yes'
zstyle ':prezto:module:editor' keymap 'vi'

zstyle ':prezto:module:prompt' theme 'sorin'        # tema rasta com suporte keybinds vi
zstyle ':prezto:module:terminal' auto-title 'no'    # sanidade ao nome das janelas no tmux 
zstyle ':prezto:module:editor' dot-expansion 'yes'  # expande ... para ../.. 

